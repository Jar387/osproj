CC = i686-linux-gnu-gcc-5
AS = i686-linux-gnu-as
LD = i686-linux-gnu-gcc-5
AR = i686-linux-gnu-ar
MERGE = i686-linux-gnu-ld

CCFLAGS = -std=gnu99 -ffreestanding -I $(INCDIR)
TARGETFLAGS = -T link.ld -o kernel.out -ffreestanding -nostdlib -L lib/ -lk
ARFLAGS = -crs

%.o: %.c
	$(CC) $(CCFLAGS) -c $^ -o $@

%.o: %.s
	$(AS) $^ -o $@

.PHONY: subclean
subclean:
	-rm *.o
	-rm *.a